<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmorr.nomaste.LoginActivity">

    <Button
        android:id="@+id/like_button"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="#09B823"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="398dp"/>
        android:drawableRight="@drawable/ic_like_button_hdpi"
        <!--android:src="@drawable/ic_like_button_hdpi"-->
        android:padding="10dp"
        android:text="@string/like_button"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/follow_button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="44dp"
        android:background="#09B823"
        android:drawableRight="@drawable/ic_follow_button_hdpi"
        android:padding="10dp"
        android:text="@string/follow_button"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="375dp"
        android:layout_height="175dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="// User comments of pics go here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
